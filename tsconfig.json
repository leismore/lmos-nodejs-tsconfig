{
  "compilerOptions":
  {
    "lib":                          ["ES2017"],
    "target":                        "ES2017",
    "baseUrl":                       "./src/",
    "outDir":                        "./dist/",
    "module":                        "nodenext",
    "moduleResolution":              "nodenext",
    "resolveJsonModule":             true,
    "strict":                        true,
    "declaration":                   true,
    "allowJs":                       false,
    "checkJs":                       false
  },
  "include":            ["./src/"],
  "exclude":            ["./node_modules/", "./dist/", "./.git/", "./test/"]
}
